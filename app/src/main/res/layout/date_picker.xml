<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    foo:cardBackgroundColor="@android:color/white"
    foo:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">


        <ir.medxhub.doctor.util.views.TextViewCustom
            android:id="@+id/date_picker_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/blue"
            android:textSize="20sp"
            foo:customFont="fonts/yekan.ttf"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="70dp"
                android:layout_height="90dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:id="@+id/inc_year"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:clickable="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/btn_gray">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:text="▲"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dec_year"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:clickable="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/btn_gray">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:text="▼"/>

                </LinearLayout>

                <ir.medxhub.doctor.util.views.EditTextCustom
                    android:id="@+id/date_year"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:maxLength="4"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/dark_gray"
                    android:inputType="number"
                    foo:customFont="fonts/yekan.ttf"
                    android:background="@color/light_gray"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:id="@+id/inc_month"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:clickable="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/btn_gray">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:text="▲"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dec_month"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:clickable="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/btn_gray">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:text="▼"/>

                </LinearLayout>

                <ir.medxhub.doctor.util.views.EditTextCustom
                    android:id="@+id/date_month"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:maxLength="2"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/dark_gray"
                    android:inputType="number"
                    foo:customFont="fonts/yekan.ttf"
                    android:background="@color/light_gray"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="90dp"
                android:layout_margin="10dp">

                <LinearLayout
                    android:id="@+id/inc_day"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:clickable="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/btn_gray">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:text="▲"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dec_day"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:clickable="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/btn_gray">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:text="▼"/>

                </LinearLayout>

                <ir.medxhub.doctor.util.views.EditTextCustom
                    android:id="@+id/date_day"
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:maxLength="2"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textColor="@color/dark_gray"
                    android:inputType="number"
                    foo:customFont="fonts/yekan.ttf"
                    android:background="@color/light_gray"/>
            </RelativeLayout>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:clickable="true">

            <ir.medxhub.doctor.util.views.TextViewCustom
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textColor="@color/dark_gray"
                android:gravity="center"
                android:textSize="15sp"
                android:text="@string/cancel"
                foo:customFont="fonts/yekan.ttf"
                android:background="@drawable/btn_simple_white"/>

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/gray"/>

            <ir.medxhub.doctor.util.views.TextViewCustom
                android:id="@+id/confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textColor="@color/dark_gray"
                android:gravity="center"
                android:textSize="15sp"
                android:text="@string/submit"
                foo:customFont="fonts/yekan.ttf"
                android:background="@drawable/btn_simple_white"/>
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>