<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:foo="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/login_back1"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="-15dp"
            android:layout_marginRight="-15dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></LinearLayout>

            <ImageView
                android:background="@drawable/bg_transparent_bordered_normal"
                android:id="@+id/visit_website"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"

                android:src="@drawable/medexhub_transparent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"></LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">


            <ir.medxhub.doctor.util.views.TextViewCustom
                android:layout_marginBottom="7dp"
                android:background="@drawable/btn_transparent_blue"
                android:id="@+id/tv_login"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:ellipsize="start"
                android:ems="10"
                android:gravity="center"
                android:text="ورود"
                android:textSize="18sp"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="@android:color/white"
                foo:customFont="fonts/yekan.ttf"/>

            <ir.medxhub.doctor.util.views.TextViewCustom
                android:background="@drawable/btn_transparent_green"
                android:id="@+id/tv_register"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:ellipsize="start"
                android:ems="10"
                android:gravity="center"
                android:text="ثبت نام"
                android:textSize="18sp"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="@android:color/white"
                foo:customFont="fonts/yekan.ttf"/>

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="150dp"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"
                    android:background="#64ffffff"/>

                <ir.medxhub.doctor.util.views.TextViewCustom
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="یا"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    foo:customFont="fonts/yekan.ttf"/>

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="1dp"
                    android:background="#64ffffff"/>
            </LinearLayout>

            <ir.medxhub.doctor.util.views.TextViewCustom
                android:background="@drawable/btn_transparent_gray"
                android:id="@+id/tv_guest_login"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:textSize="18sp"
                android:ellipsize="start"
                android:ems="10"
                android:gravity="center"
                android:text="ورود مهمان"
                android:maxLines="1"
                android:textColor="@android:color/white"
                foo:customFont="fonts/yekan.ttf"/>


        </LinearLayout>

        <TextView
            android:background="@color/main_color"
            android:layout_above="@+id/box_features"
            android:id="@+id/tv_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="www.medXhub.com"
            android:textSize="20sp"/>

        <LinearLayout
            android:id="@+id/box_features"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:background="#8f979797"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <LinearLayout
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/ic_medical_file"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <ir.medxhub.doctor.util.views.TextViewCustom
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="پرونده ی پزشــکی"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    foo:customFont="fonts/yekan.ttf"/>

            </LinearLayout>

            <View
                android:background="@color/white"
                android:layout_margin="7dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"></View>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@mipmap/ic_question"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <ir.medxhub.doctor.util.views.TextViewCustom
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="ســـوال و جـــواب"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    foo:customFont="fonts/yekan.ttf"/>

            </LinearLayout>

            <View
                android:background="@color/white"
                android:layout_margin="7dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"></View>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@mipmap/ic_calendar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <ir.medxhub.doctor.util.views.TextViewCustom
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="نوبت دهی اینتــرنتی"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    foo:customFont="fonts/yekan.ttf"/>

            </LinearLayout>

            <View
                android:background="@color/white"
                android:layout_margin="7dp"
                android:layout_width="1dp"
                android:layout_height="match_parent"></View>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@mipmap/ic_search"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <ir.medxhub.doctor.util.views.TextViewCustom
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="جستجوی مراکـــز"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    foo:customFont="fonts/yekan.ttf"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>