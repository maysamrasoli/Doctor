<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/llSortChangePopup"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="4dp"
                                        android:layout_marginLeft="4dp"
                                        android:layout_marginRight="4dp"
                                        android:layout_marginTop="4dp"
                                        android:padding="6dp"
                                        card_view:cardBackgroundColor="#fff"
                                        card_view:cardCornerRadius="2dp">


        <com.onegravity.rteditor.toolbar.HorizontalRTToolbar
            android:id="@+id/rtToolbar4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/actionBarItemBackground"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <com.onegravity.rteditor.toolbar.RTToolbarImageButton
                    android:id="@+id/toolbar_faqu"
                    style="@style/RTE_ToolbarButton"

                    android:background="?attr/rte_icToolbarFaQu"/>

                <com.onegravity.rteditor.toolbar.RTToolbarImageButton
                    android:id="@+id/toolbar_enqu"
                    style="@style/RTE_ToolbarButton"

                    android:background="?attr/rte_icToolbarEnQu"/>

                <com.onegravity.rteditor.toolbar.RTToolbarImageButton
                    android:id="@+id/toolbar_hazard"
                    style="@style/RTE_ToolbarButton"

                    android:background="?attr/rte_icToolbarHazard"/>


            </LinearLayout>

        </com.onegravity.rteditor.toolbar.HorizontalRTToolbar>


    </android.support.v7.widget.CardView>


</LinearLayout>