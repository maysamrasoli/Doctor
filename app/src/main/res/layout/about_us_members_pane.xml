<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none">


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splash_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_app"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ir.medxhub.doctor.util.views.TextViewCustom
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سیستم جامع پزشکان"
                android:textColor="@color/dark_blue"
                android:textSize="23sp"
                android:textStyle="bold"
                foo:customFont="fonts/yekan.ttf"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray"/>
        </LinearLayout>

        <ir.medxhub.doctor.util.views.TextViewCustom
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="کاری از شرکت رایان سامانه شرق"
            android:textColor="@color/dark_gray"
            android:textSize="15sp"
            android:textStyle="bold"
            foo:customFont="fonts/yekan.ttf"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/members_container"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/profile_1"
            android:layout_width="100dp"
            android:layout_marginRight="5dp"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:background="@drawable/shape_circle_gray"/>

            <ir.medxhub.doctor.util.views.RoundedImageView
                android:id="@+id/avatar_1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:src="@drawable/profile_avatar"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_2"
            android:layout_width="100dp"
            android:layout_marginRight="5dp"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:background="@drawable/shape_circle_gray"/>

            <ir.medxhub.doctor.util.views.RoundedImageView
                android:id="@+id/avatar_2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:src="@drawable/profile_avatar"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/profile_3"
            android:layout_width="100dp"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:background="@drawable/shape_circle_gray"/>

            <ir.medxhub.doctor.util.views.RoundedImageView
                android:id="@+id/avatar_3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="5dp"
                android:src="@drawable/profile_avatar"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_above="@id/members_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/main_color"/>

        <ir.medxhub.doctor.util.views.TextViewCustom
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="تیم طراحی و توسعه"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            foo:customFont="fonts/yekan.ttf"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="@color/main_color"/>
    </LinearLayout>
</RelativeLayout>