<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".Intro">

    <ir.medxhub.doctor.util.glider.ParallaxContainer
        android:id="@+id/parallaxcontainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicators"
        android:padding="@dimen/activity_vertical_margin_1x"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin_1x"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        app:radius="6dp"
        app:fillColor="@color/dark_blue"
        app:pageColor="@android:color/transparent"
        app:strokeColor="@color/dark_blue"
        app:strokeWidth="1dp"/>
</RelativeLayout>
