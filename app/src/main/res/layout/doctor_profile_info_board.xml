<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/LinearLayoutParent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@color/light_gray2"
        android:orientation="horizontal">

        <ir.medxhub.doctor.util.views.TextViewCustom
            android:id="@+id/year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="تاریخ صدور"
            android:textColor="#ff8c8c8c"
            android:textSize="14sp"
            foo:customFont="fonts/yekan.ttf" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="#ffbcbcbc" />

        <ir.medxhub.doctor.util.views.TextViewCustom
            android:id="@+id/export"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="انجمن صادر کننده"
            android:textColor="#ff8c8c8c"
            android:textSize="14sp"
            foo:customFont="fonts/yekan.ttf" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="#ffbcbcbc" />

        <ir.medxhub.doctor.util.views.TextViewCustom
            android:id="@+id/evidence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="مدرک دریافت شده"
            android:textColor="#ff8c8c8c"
            android:textSize="14sp"
            foo:customFont="fonts/yekan.ttf" />

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="#ffbcbcbc" />
</LinearLayout>